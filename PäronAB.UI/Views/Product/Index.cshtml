@model PäronAB.UI.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add/edit product</h2>

<form action="Product/Index" method="post">
    <table class="table">
        <tr>
            <td>SKU</td>
            <td>
                <input id="sku" name="SKU" type="text" value="" class="form-control" required="required" />
            </td>
        </tr>
        <tr>
            <td>Name</td>
            <td>
                <input id="name" name="name" type="text" value="" class="form-control" required="required"/>
            </td>
        </tr>
        <tr>
            <td>Price</td>
            <td>
                <input id="price" name="price" type="number" min="0" step="0.01" value="" class="form-control" required="required"/>
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="Save" /></td>
            <td></td>
        </tr>
    </table>
</form>

<h2>Products</h2>
<table class="table">
    <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @{
        foreach (var product in Model.ProductList)
        {
            <tr>
                <td>@product.SKU</td>
                <td>@product.Name</td>
                <td>@product.UnitPrice</td>
            </tr>
        }

    }
</table>




